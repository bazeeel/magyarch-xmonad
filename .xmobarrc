Config {

   -- appearance
     font =         "xft:Font Awesome:size=12, JetBrains Mono:size=11:bold:antialias=true"
   , additionalFonts = ["Joy Pixels:size=11"]

   , bgColor =      "#2f2b26"
   , fgColor =      "#c3cdc8"
   , position =     TopSize L 97 23
   --, position = Static { xpos = 0, ypos = 0, width = 1920, height = 23 },
   , alpha    = 255
   --, overrideRedirect = True 
   --, border =       BottomB
   --, borderColor =  "#2e8b57"
     , iconRoot = "/home/xeoncpu/.xmonad/xpm/"  -- default: "."

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = " <box type=Bottom width=2 color=#c3cdc8> <icon=xmonad.xpm/>  %UnsafeStdinReader% </box> }{  <fc=#2f2b26,#11aabb> <fn=0></fn> %mycpu% </fc><fc=#2f2b26,#0876ee> %mymemory% </fc><fc=#2f2b26,#ef9cbb>%LHBP%</fc><action=`urxvt -e calcurse` button=1>%date%</action><fc=#2f2b26,#2e8b57> %myvolume% | %kbd%  </fc>"

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   , commands = 
          
        -- weather monitor
        [Run Weather "LHBP" [ "-t", " <fn=0></fn>  <tempC>°C / <fn=0></fn> <rh>% "] 36000
        , Run MPD ["-t", "<state>: <artist> - <track>"] 10
        -- Stdinreadeer
	    --, Run StdinReader
        , Run UnsafeStdinReader

        -- network activity monitor (dynamic interface resolution)
        -- , Run DynNetwork ["-t","<rx> | <tx>","-S","True","-L","0","-H","6000","--normal","green","--high","red"] 10
        -- , Run Uptime [] 600
        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "   <total> % "
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#c3cdc8"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10

        -- cpu core temperature monitor
        --, Run CoreTemp       [ "--template" , "  <core0> °C "
        --                     , "--Low"      , "70"        -- units: °C
        --                     , "--High"     , "80"        -- units: °C
        --                     , "--low"      , "#c3cdc8"
        --                     , "--normal"   , "darkorange"
        --                     , "--high"     , "darkred"
        --                     ] 50

        --  , Run MPD ["-t"," <artists> <albums> <songs> "] 10
            
        -- memory usage monitor
        --, Run Memory         [ "--template" ," <usedratio>% "
        --                     , "--Low"      , "20"        -- units: %
        --                     , "--High"     , "90"        -- units: %
        --                     , "--low"      , "#c3cdc8"
        --                     , "--normal"   , "darkorange"
        --                     , "--high"     , "darkred"
        --                     ]  10
                   
        --, Run Volume "default" "Master" [] 10


        --, Run "default" "Master" ["--template", "vol:<vol>"] 10

        

        -- Scripts from .local/bin folder
        , Run Com "/bin/bash" ["-c", "~/.local/bin/statusbar/volume"] "myvolume" 5

        , Run Com  "/bin/bash" ["-c", "memory"] "mymemory" 10

        , Run Com "/bin/bash"  ["-c", "cpu"] "mycpu" 10

        --[Run Weather "/bin/bash"  ["-c", "weather"] "myweather" ]10

        
              

        
  
        -- time and date indicator
         , Run Date           "<fc=#2f2b26,#bb11dd> <fn=0></fn> %F (%a) %T </fc>" "date" 10


        -- keyboard layout indicator
        , Run Kbd            [ ("hu"         , "<fc=#2f2b26,#2e8b57><fn=0></fn> hu  </fc>") ]
        

        , Run Com "/bin/bash" ["-c", "trayerpad"]  "trayerpad" 10
          ]
   }

